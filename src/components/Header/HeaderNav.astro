---
import HeaderLink from "./HeaderLink.astro";
// import Btn from "./PrimaryButton.astro";

const navListItems = [
  { name: "About", path: "/about" },
  { name: "Services", path: "/services" },
  { name: "Blog", path: "/blog" },
  { name: "Contact", path: "/contact" },
];
---

<section class="nav-container">
  <!-- NOTE: LOGO -->
  <h2><HeaderLink class="logo" href="/">New Hope</HeaderLink></h2>

  <!-- NOTE: HAMBURGER BUTTON -->
  <button
    class="header_nav-toggle"
    aria-controls="header_nav"
    aria-expanded="false"
  >
    <i class="fa-solid fa-bars hamburger" aria-hidden="true"></i>
    <i class="fa-solid fa-xmark close" aria-hidden="true"></i>
    <span class="visually-hidden">Menu</span>
  </button>

  <!-- NOTE: HEADER NAV -->
  <nav id="header_nav" class="header_nav">
    <ul class="header_nav_list" aria-label="Header Nav" role="list">
      {
        navListItems.map((listItem) => (
          <li class="header_nav_item" role="listitem">
            <HeaderLink class="header_nav_link" href={listItem.path}>
              {listItem.name}
            </HeaderLink>
          </li>
        ))
      }
    </ul>
  </nav>
</section>

<style lang="scss">
  @use "../../styles/abstracts/" as *;

  .nav-container {
    margin: 0 auto;
    height: 60px;
    max-width: 1920px;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    z-index: 2;
  }

  .header_nav-toggle {
    display: none;
  }

  .header_nav_list {
    display: flex;
    gap: clamp(1rem, 5vw, 2rem);

    @include font-size(
      $breakpoints,
      map-get($fsmt-px-scale, sm),
      $fs-hrz-ratio
    );
  }

  // NOTE: accessability hidden
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .header_nav_link[aria-current="page"],
  .header_nav_link:active {
    color: darken($color: map-get($gmk9009, green), $amount: 25%);
    position: relative;
  }

  // NOTE: MOBILE STYLES
  @media screen and (max-width: map-get($breakpoints, tablet-md)) {
    .logo {
      // padding: 0.5rem;
    }

    .mobile-nav-toggle {
      display: block;
      z-index: 1001;
      cursor: pointer;
      background: transparent;
      border: 0;
      // padding: 0.5rem;
    }

    .hamburger,
    .close {
      font-size: 1.5rem;
    }

    .close {
      display: none;
    }

    .header_nav {
      display: none;
      height: calc(100% - 59px);
      padding: 4rem 0;
      background-color: lighten($color: map-get($gmk9009, beige), $amount: 10%);
      position: fixed;
      // right: 0;
      // top: 0;
      // inset: 9rem 2rem auto;
      // inset: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 1;
      animation-duration: 0.3s;
      box-shadow: hsla(0, 0%, 5%, 0.1) 0px 12px 24px;

      & + button {
        display: none;
      }
    }

    .header_nav[data-visible] {
      display: grid;
      place-items: center;
    }

    .close[data-visible] {
      display: block;
    }

    .hamburger[data-invisible] {
      display: none;
    }

    .header_nav_list {
      display: grid;
      gap: 2rem;
      text-align: center;
      font-weight: 600;
      font-size: 1.4rem;

      @media screen and (max-width: map-get($breakpoints, mobile-sm)) {
        font-size: 1.2rem;
      }

      @media screen and (max-width: map-get($breakpoints, tablet-sm)) {
        font-size: 1.8rem;
      }

      a {
        text-decoration: none;
      }
    }

    .nav-link[aria-current="page"],
    .nav-link:active {
      color: darken($color: map-get($gmk9009, green), $amount: 10%);
      position: relative;
    }
  }
</style>

<script>
  const navLinks = document.querySelectorAll(".header_nav_link");

  navLinks.forEach((link) => {
    // console.log(link.pathname);
    if (link.pathname === window.location.pathname) {
      link.setAttribute("aria-current", "page");
      console.log(window.location.pathname);
    }
  });
</script>
